                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CartItemsLabel" Storyboard.TargetProperty="(Grid.Row)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Int32>6</x:Int32>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CartItemsLabel" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>25,20,0,10</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemsGridView" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>20,0,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewLabel" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>25,0,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SubmitButton" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>20,0,25,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewGrid" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>20,15,25,15</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewLabel" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Left</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewGrid" Storyboard.TargetProperty="(FrameworkElement.Width)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>270</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GrandTotalLabel" Storyboard.TargetProperty="(Control.FontSize)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>23</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AddressAndPaymentLabel" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Left</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AddressAndPaymentList" Storyboard.TargetProperty="(Control.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AddressAndPaymentList" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Stretch</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SelectShippingPlanLabel" Storyboard.TargetProperty="(TextBlock.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SelectShippingPlanLabel" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Left</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CartItemsLabel" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Left</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SelectShippingPlanList" Storyboard.TargetProperty="(FrameworkElement.HorizontalAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Stretch</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverviewPanel" Storyboard.TargetProperty="(FrameworkElement.Width)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>NaN</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(Control.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(Grid.RowSpan)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Int32>1</x:Int32>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>2,0,-2,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AddressAndPaymentList" Storyboard.TargetProperty="(Control.HorizontalContentAlignment)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <HorizontalAlignment>Stretch</HorizontalAlignment>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CartItemsLabel" Storyboard.TargetProperty="(TextBlock.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AddressAndPaymentLabel" Storyboard.TargetProperty="(TextBlock.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SelectShippingPlanList" Storyboard.TargetProperty="(Control.FontFamily)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <FontFamily>Global User Interface</FontFamily>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(ScrollViewer.HorizontalScrollBarVisibility)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <ScrollBarVisibility>Disabled</ScrollBarVisibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ItemsGridView" Storyboard.TargetProperty="(Grid.Column)">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Int32>0</x:Int32>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Back button and page title  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton"
                    Command="{Binding GoBackCommand,
                                      ElementName=pageRoot}"
                    Style="{StaticResource BackButtonStyle}" />
            <TextBlock x:Uid="CheckoutSummaryTitle"
                       x:Name="pageTitle"
                       Grid.Column="1"
                       Style="{StaticResource PageHeaderTextStyle}"
                       Text="Checkout Summary" />
        </Grid>
        <ScrollViewer x:Name="content"
                      Grid.Row="1"
                      Grid.RowSpan="2"
                      HorizontalScrollBarVisibility="Auto"
                      Style="{StaticResource HorizontalScrollViewerStyle}">
            <Grid x:Name="ContentGrid" Margin="120,0,0,0">
                <Grid.Resources>
                    <Style x:Name="SummarySubheaderTextStyle"
                           BasedOn="{StaticResource GroupHeaderTextStyle}"
                           TargetType="TextBlock">
                        <Setter Property="Margin" Value="85,0,0,0" />
                    </Style>
                    <Style TargetType="ListView">
                        <Setter Property="Margin" Value="80,0,0,0" />
                    </Style>
                    <Style TargetType="GridView">
                        <Setter Property="Margin" Value="80,0,0,0" />
                    </Style>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Overview  -->
                <TextBlock x:Uid="OverviewLabel"
                           x:Name="OverviewLabel"
                           Grid.Row="0"
                           Grid.Column="0"
                           Foreground="{StaticResource AWShopperAccentTextBrush}"
                           Style="{StaticResource GroupHeaderTextStyle}"
                           Text="Overview" />
                <StackPanel x:Name="OverviewPanel"
                            Grid.Row="7"
                            Grid.Column="0"
                            Width="320"
                            Orientation="Vertical">
                    <Grid x:Name="OverviewGrid"
                          Grid.Row="1"
                          Grid.Column="0"
                          Height="170"
                          Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="OrderSubtotalLabel"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="Order Subtotal:"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="{Binding OrderSubtotal}"
                                   TextAlignment="Right"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock x:Uid="ShippingLabel"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="Shipping:"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="{Binding ShippingCost}"
                                   TextAlignment="Right"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock x:Uid="TaxLabel"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="Tax:"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Text="{Binding TaxCost}"
                                   TextAlignment="Right"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock x:Uid="GrandTotalLabel"
                                   x:Name="GrandTotalLabel"
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Text="Grand Total:"
                                   TextTrimming="WordEllipsis" />
                        <TextBlock Grid.Row="3"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Foreground="{StaticResource AWShopperAccentTextBrush}"
                                   Text="{Binding GrandTotal}"
                                   TextAlignment="Right"
                                   TextTrimming="WordEllipsis" />
                    </Grid>
                    <Button x:Uid="SubmitButton"
                            x:Name="SubmitButton"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="{StaticResource AWShopperAccentBrush}"
                            Command="{Binding SubmitCommand}"
                            Content="Submit" />
                </StackPanel>

                <!--  Address & Payment  -->
                <TextBlock x:Uid="AddressAndPaymentLabel"
                           x:Name="AddressAndPaymentLabel"
                           Grid.Row="0"
                           Grid.Column="1"
                           MaxWidth="360"
                           Foreground="{StaticResource AWShopperAccentTextBrush}"
                           Style="{StaticResource SummarySubheaderTextStyle}"
                           Text="Address &amp; Payment" />
                <ListView x:Name="AddressAndPaymentList"
                          Grid.Row="7"
                          Grid.Column="1"
                          HorizontalAlignment="Left"
                          ItemTemplate="{StaticResource CheckoutDataTemplate}"
                          ItemsSource="{Binding CheckoutDataViewModels}"
                          SelectedItem="{Binding SelectedCheckoutData,
                                                 Mode=TwoWay}"
                          SelectionMode="Single">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <TextBlock x:Uid="SelectShippingPlanLabel"
                           x:Name="SelectShippingPlanLabel"
                           Grid.Row="0"
                           Grid.Column="2"
                           MaxWidth="380"
                           Foreground="{StaticResource AWShopperAccentTextBrush}"
                           Style="{StaticResource SummarySubheaderTextStyle}"
                           Text="Select Shipping Plan" />
                <ListView x:Name="SelectShippingPlanList"
                          Grid.Row="7"
                          Grid.Column="2"
                          HorizontalAlignment="Left"
                          ItemTemplate="{StaticResource ShippingMethodTemplate}"
                          ItemsSource="{Binding ShippingMethods}"
                          SelectedItem="{Binding SelectedShippingMethod,
                                                 Mode=TwoWay}"
                          SelectionMode="Single">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <!--  Items  -->
                <TextBlock x:Uid="CartItemsLabel"
                           x:Name="CartItemsLabel"
                           Grid.Row="0"
                           Grid.Column="3"
                           Foreground="{StaticResource AWShopperAccentTextBrush}"
                           Style="{StaticResource SummarySubheaderTextStyle}"
                           Text="Cart Items" />


                <!--
                    The AutoRotatingGridView control, that automatically rearranges items,
                    when the app is switched to portrait mode, or to minimal layout mode.
                -->
                <awcontrols:AutoRotatingGridView x:Name="ItemsGridView"
                                                 Grid.Row="7"
                                                 Grid.Column="3"
                                                 Margin="80,0,0,0"
                                                 VerticalAlignment="Top"
                                                 ItemTemplate="{StaticResource ShoppingCartItemTemplate}"
                                                 ItemsSource="{Binding ShoppingCartItemViewModels}"
                                                 MinimalItemTemplate="{StaticResource ShoppingCartItemTemplateMinimal}"
                                                 SelectionMode="None">
                    <awcontrols:AutoRotatingGridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid ItemWidth="400" Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </awcontrols:AutoRotatingGridView.ItemsPanel>
                    <awcontrols:AutoRotatingGridView.PortraitItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid ItemWidth="400" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </awcontrols:AutoRotatingGridView.PortraitItemsPanel>
                    <awcontrols:AutoRotatingGridView.MinimalItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </awcontrols:AutoRotatingGridView.MinimalItemsPanel>

                </awcontrols:AutoRotatingGridView>

            </Grid>
        </ScrollViewer>

        <!--  Sign In UserControl  -->
        <local:SignInUserControl Grid.RowSpan="2"
                                 Grid.ColumnSpan="2"
                                 DataContext="{Binding SignInUserControlViewModel}"
                                 IsEnabled="{Binding IsOpened}"
                                 Visibility="{Binding IsOpened,
                                                      Mode=TwoWay,
                                                      Converter={StaticResource BooleanToVisibilityConverter}}"
                                 d:IsHidden="True" />
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Uid="BottomAppBar"
                    IsOpen="{Binding IsBottomAppBarOpened,
                                     Mode=TwoWay}"
                    IsSticky="True"
                    Style="{StaticResource AppBarStyle}"
                    Visibility="{Binding SelectedCheckoutData,
                                         Converter={StaticResource NotNullToVisibleConverter}}">
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Uid="SelectCheckoutDataAppBarButton"
                              x:Name="SelectCheckoutDataAppBarButton"
                              AutomationProperties.AutomationId="SelectCheckoutDataAppBarButton"
                              Command="{Binding SelectCheckoutDataCommand}"
                              Icon="List"
                              Label="Select"
                              Visibility="{Binding SelectedCheckoutData,
                                                   Converter={StaticResource NotNullToVisibleConverter}}">
                    <AppBarButton.Flyout>
                        <Flyout FlyoutPresenterStyle="{StaticResource AWShopperFlyoutStyle}">
                            <Grid x:Name="PopupPanel"
                                  Width="410"
                                  Height="250"
                                  Background="{StaticResource AppBarBackgroundThemeBrush}"
                                  Opacity=".9">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="65" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="PopupTitle"
                                           Margin="15,5"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource AWShopperAccentTextBrush}"
                                           Style="{StaticResource GroupHeaderTextStyle}"
                                           Text="{Binding SelectCheckoutDataLabel}" />
                                <ListView x:Name="PopupItems"
                                          Grid.Row="1"
                                          Width="390"
                                          Height="130"
                                          Margin="10,0"
                                          ItemTemplate="{StaticResource SmallCheckoutDataTemplate}"
                                          ItemsSource="{Binding AllCheckoutDataViewModels}"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          SelectedItem="{Binding SelectedAllCheckoutData,
                                                                 Mode=TwoWay}"
                                          SelectionMode="Single" />
                                <Button x:Uid="AddCheckoutData"
                                        x:Name="PopupButton"
                                        Grid.Row="2"
                                        Width="370"
                                        Margin="10,5"
                                        Background="{StaticResource AWShopperAccentBrush}"
                                        Command="{Binding AddCheckoutDataCommand}" />
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton x:Uid="EditCheckoutDataAppBarButton"
                              x:Name="EditCheckoutDataAppBarButton"
                              AutomationProperties.AutomationId="EditCheckoutDataAppBarButton"
                              Command="{Binding EditCheckoutDataCommand}"
                              Icon="Edit"
                              Label="Edit"
                              Visibility="{Binding SelectedCheckoutData,
                                                   Converter={StaticResource NotNullToVisibleConverter}}" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</local:NavigationAwarePage>
